<!DOCTYPE html>
<html lang="fr">
	<head>

	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimal-ui">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="content-language" content="fr">
    <meta name="language" content="fr">
    <meta name="copyright" content="http://monsite.fr">
    <meta name="author" content="monsite.fr">
	
	<title><%= @title %></title>
	
	<link rel="stylesheet" href="css/font-awesome.min.css"/>
	<link rel="stylesheet" href="css/style.css"/>

	<script type="text/javascript">
	function copyText(nb) {
		var divname = 'task-desc-'+nb;
		var textname = 'task-textarea-'+nb;
		var taskdesc = document.getElementById(divname).innerHTML;
		document.getElementById(textname).value = taskdesc;
	}

	function Openedit(nb) {
		var btnedit = 'task-edit-'+nb;
		document.getElementById(btnedit).style.display = 'block';
	}

	function Closedit(nb) {
		var btnedit = 'task-edit-'+nb;
		setTimeout(function() {document.getElementById(btnedit).style.display = 'none';},500);
	}
	</script>
	</head>
	
	<body>
		<% if flash[:notice] %>
			<div class="alert alert-success"><i class="fa fa-check"></i> <%= flash[:notice] %></div>
		<% end %>
		<% if flash[:error] %>
			<div class="alert alert-error"><i class="fa fa-times"></i> <%= flash[:error] %></div>
		<% end %>

		<%= yield %>

		<script src="js/jquery-2.1.4.min.js"></script>
		<script >
		$(document).ready(function() {
			$('.alert').delay(1500).fadeOut('slow');
		});
		</script>
	</body>
</html>